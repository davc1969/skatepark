
{{> header_small }}

<div class="py-4">
      <h2>Registro</h2>
      <hr class="w-50" />

      <form method="post"  enctype="multipart/form-data">
        <div class="form-group row w-50 m-auto">
            <div class="form-group col-12 col-sm-6">
                <label>Email</label>
                <input class="form-control m-auto"
                    id="skaterEmail"
                    type="email"
                    oninvalid="this.setCustomValidity('Please Enter valid email')"
                    oninput="setCustomValidity('')"
                    required
                />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Nombre</label>
                <input class="form-control m-auto"
                    id="skaterName"
                    type="text"
                    oninvalid="this.setCustomValidity('Please enter yor full name')"
                    oninput="setCustomValidity('')"
                    required
                />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Password</label>
                <input class="form-control m-auto"
                    id="skaterPassword1"
                    type="password"
                    oninvalid="this.setCustomValidity('Please enter yor password')"
                    oninput="setCustomValidity('')"
                    required
                />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Repita el password</label>
                <input class="form-control m-auto"
                    id="skaterPassword2"
                    type="password"
                    oninvalid="this.setCustomValidity('Please repeat yor password')"
                    oninput="setCustomValidity('')"
                    required
                />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>AÃ±os de experiencia</label>
                <input class="form-control m-auto"
                    id="skaterXp"
                    type="number"
                    oninvalid="this.setCustomValidity('Please enter yor experience time')"
                    oninput="setCustomValidity('')"
                    required
                />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Especialidad</label>
                <input class="form-control m-auto"
                    id="skaterHability"
                    type="text"
                    oninvalid="this.setCustomValidity('Please enter yor hability')"
                    oninput="setCustomValidity('')"
                    required
                />
            </div>
            <div class="form-group col-12 col-sm-12">
                <label>Foto de perfil</label>
                <input type="file"
                    id="skaterPic"
                    name="skaterPic"
                    oninvalid="this.setCustomValidity('Please select your profile pic')"
                    oninput="setCustomValidity('')"
                    accept="image/*"
                    required
                />
            </div>
        </div>
        <input type="submit" class="btn-info mb-3" id="submitSkater">Registrarme</input>
      </form>
    </div>

{{> links }}


<script src="/js/register.js"></script>
