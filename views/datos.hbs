{{> header_small }}


{{ user }}
{{ pwd }}
<div class="py-4">
      <h2>Datos del perfil</h2>
      <hr class="w-50" />

      <form>
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-6">
            <label>Email</label>
            <input
              class="form-control m-auto"
              disabled
              value={{ user.email }}
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Nombre</label>
            <input 
              type="text"
              class="form-control m-auto" 
              id="skaterNewName"
              value={{ user.nombre}} 
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Password</label>
            <input
              type="password"
              class="form-control m-auto"
              id="skaterNewPassword1"
              value={{ pwd }}
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Repita el password</label>
            <input
              type="password"
              class="form-control m-auto"
               id="skaterNewPassword2"
              value={{ pwd }}
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>AÃ±os de experiencia</label>
            <input 
              class="form-control m-auto" 
              id="skaterNewExperience"
              value={{ user.anos_experiencia }} 
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Especialidad</label>
            <input 
              class="form-control m-auto" 
              id="skaterNewHability"
              value={{ user.especialidad }} 
            />
          </div>
        </div>
        <div class="mb-1">
          <button class="btn btn-primary" id="btn_updateAccount" data-idSkater={{ user.id }}>Actualizar</button>
        </div>
        <div>
          <button class="btn btn-danger" id="btn_deleteAccount" data-idSkater={{ user.id }}>Eliminar cuenta</button>
        </div>
      </form>
    </div>


<script type="module" src="/js/datos.js"></script>